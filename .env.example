# =============================================================================
# ENVIRONMENT CONFIGURATION EXAMPLE
# =============================================================================
# 
# ANLEITUNG:
# 1. Kopiere diese Datei zu ".env"
# 2. Fülle die Werte mit deinen echten Daten aus
# 3. .env wird automatisch von .gitignore ausgeschlossen
#
# Windows: copy .env.example .env
# Linux:   cp .env.example .env
#

# =============================================================================
# ERFORDERLICHE KONFIGURATION
# =============================================================================

# OpenWeather API Key (ERFORDERLICH)
# Registrierung: https://openweathermap.org/api
OPENWEATHER_API_KEY=your_openweather_api_key_here

# Admin-Passwort für Dashboard (ERFORDERLICH)
PASSWORD=your_secure_admin_password

# =============================================================================
# OPTIONALE KONFIGURATION
# =============================================================================

# Flask Secret Key (wird automatisch generiert wenn leer)
FLASK_SECRET_KEY=

# Flask Umgebung (development/production)
FLASK_ENV=production

# Debug-Modus (True/False)
FLASK_DEBUG=False

# =============================================================================
# STANDORT-KONFIGURATION
# =============================================================================

# Stadt für Wetterdaten (optional, Standard: Berlin)
WEATHER_CITY=Berlin

# Land-Code (optional, Standard: DE)
WEATHER_COUNTRY=DE

# =============================================================================
# SICHERHEITS-KONFIGURATION
# =============================================================================

# CSRF-Schutz aktivieren (True für Produktion empfohlen)
CSRF_ENABLED=True

# Rate-Limiting aktivieren
RATE_LIMIT_ENABLED=True

# Session-Timeout in Minuten (Standard: 60)
SESSION_TIMEOUT=60

# =============================================================================
# ERWEITERTE KONFIGURATION
# =============================================================================

# Log-Level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Maximum Upload-Größe für PDFs in MB
MAX_UPLOAD_SIZE=10

# =============================================================================
# BEISPIEL FÜR AUSGEFÜLLTE .ENV DATEI:
# =============================================================================
#
# OPENWEATHER_API_KEY=1234567890abcdef1234567890abcdef
# PASSWORD=MeinSicheresPasswort123!
# FLASK_ENV=production
# WEATHER_CITY=Glienicke
# CSRF_ENABLED=True
#
