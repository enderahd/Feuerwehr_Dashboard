# Produktionsumgebung für Raspberry Pi
FLASK_ENV=production
FLASK_DEBUG=False
FLASK_SECRET_KEY=ihr_super_sicherer_secret_key_hier_mindestens_32_zeichen

# Feuerwehr Dashboard Konfiguration
PASSWORD=IhrSicheresProduktionsPasswort123!
zielverzeichnis=/opt/feuerwehr_dashboard

# OpenWeather API Konfiguration
OPENWEATHER_API_KEY=ihr_openweather_api_key_hier

# Server Konfiguration
HOST=0.0.0.0
PORT=5000

# Logging Konfiguration
LOG_LEVEL=INFO
LOG_FILE=/var/log/feuerwehr_dashboard/app.log
MAX_LOG_SIZE=10485760
LOG_BACKUP_COUNT=5

# Security
CSRF_ENABLED=True
SESSION_TIMEOUT=3600

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_DEFAULT=100 per hour
RATE_LIMIT_LOGIN=5 per minute

# CSRF Fallback - für Probleme mit CSRF
CSRF_FALLBACK_ENABLED=True
